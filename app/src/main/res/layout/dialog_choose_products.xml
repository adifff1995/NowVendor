<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_top_raduis_white">


    <TextView
        android:id="@+id/tv"
        style="@style/textPatternRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_orange"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/choose_product_for_offer"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/btn_add"
        app:layout_constraintTop_toBottomOf="@+id/tv" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/textPatternRegular"
        android:textColor="@color/white"
        android:text="@string/add"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_button_main_shape_blue"
        android:layout_marginBottom="@dimen/_20sdp"/>


</androidx.constraintlayout.widget.ConstraintLayout>